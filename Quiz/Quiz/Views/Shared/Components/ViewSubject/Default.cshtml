<table class="table align-middle table-nowrap" id="customerTable1">
    <thead class="table-light">
        <tr>
            <th class="sort" data-sort="customer_name">Tên chủ đề</th>
            <th class="sort" data-sort="action">Hoạt động</th>
        </tr>
    </thead>
    <tbody class="list form-check-all">
        @for (int i = 0; i < Model.ListSubject.Count; i++)
        {
            string a = "treetable-" + Model.ListSubject[i].SubjectId + "";
            string b = "treetable-parent-" + Model.ListSubject[i].ParentSubjectId + "";
            <tr data-node="@a" data-pnode="@b" class="treetable-collapsed">
                <td>@Model.ListSubject[i].NameSubject</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = @Model.ListSubject[i].SubjectId }, new { @class = "btn btn-success" })
                    <a data-bs-toggle="modal" class="btn btn-info" data-bs-target="#myModaldelete" onclick="Delete('@Model.ListSubject[i].SubjectId')">
                        Xóa
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>




<div class="d-flex justify-content-end">
    <div class="pagination-wrap hstack gap-2" id="pagination">
    </div>
</div>
<script src="~/lib/bootstrap-treefy-master/dist/bootstrap-treefy.js"></script>
<script>
    $(function () {
        $("#customerTable1").treeFy({
            treeColumn: 0
        });
    });
    function Delete(subjectId) {
        $("#myModaldelete").attr("data-id", subjectId)
    }

    $(document).ready(function () {
        Pagination();

    })
    function Close() {
       $("#myModaldelete").modal("hide");
    }
    function DeleteSubject() {
        let id = $("#myModaldelete").attr("data-id");
        $.ajax({
            type: 'POST',
            url: 'Subject/Delete',
            data: {
                id: id,
            },
            success: function (data) {
                $("#myModaldelete").modal("hide");
                GetListSubject(@Model.PageIndex);
            },
        });
    }

    function Pagination() {
            $('#pagination').html('@Html.Raw(Helper.Paging(Model.PageIndex, Model.NumberPage))');
    }
    function NextPage(page) {
        GetListSubject(page);
    }
</script>



