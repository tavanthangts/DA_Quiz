@model Quiz.Models.TypeQuestionViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">@ViewBag.Title</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Pages</a></li>
                    <li class="breadcrumb-item active">Starter</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
@using (Html.BeginForm("Create", "TypeQuestion", FormMethod.Post))
{
    @Html.HiddenFor(t => t.TypeQuestionId)
    <div class="row">
        <div class="card card-body">
            <form action="">
                <div class="row mb-3">
                    <div class="col-lg-2 ">
                        <label for="NameTypeQuestion" class="form-label">Tên loại câu hỏi</label>
                    </div>
                    <div class="col-lg-5">
                        @Html.TextBoxFor(t => t.NameTypeQuestion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-7">
                        <button type="submit" style="float : right" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

